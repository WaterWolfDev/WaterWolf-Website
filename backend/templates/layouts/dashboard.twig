<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    {{ include("layouts/sections/header.twig") }}

    {% block head %}
        {{ renderAssets('frontend/layout.js') }}
    {% endblock %}
</head>
<body>
{{ include("layouts/sections/nav.twig") }}

{{ include("layouts/sections/dashboard_sidebar.twig") }}

<div id="page-wrapper">
    <!-- Page Content  -->
    <main id="main" class="has-sidebar">
        <div class="container-fluid page">
            <div class="d-block d-lg-none mb-3">
                <button id="navbar-toggle" data-bs-toggle="offcanvas" data-bs-target="#sidebar"
                        aria-controls="sidebar" aria-expanded="false"
                        class="btn btn-secondary">
                    Toggle Sidebar
                </button>
            </div>

            {% block content %}

            {% endblock %}
        </div>
    </main>

    <footer id="footer" class="has-sidebar mt-3">
        {{ include("layouts/sections/footer.twig") }}
    </footer>
</div>

{{ include("layouts/sections/notifications.twig") }}
</body>
</html>
